<style type="text/css">
    body{
        margin: 0;
        padding: 0;
        font-family: 'Arial', sans-serif;
        font-size: 13px;
        line-height: 130%;
        text-rendering: optimizeLegibility;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        -moz-text-size-adjust: none;
        -webkit-text-size-adjust: none;
        -ms-text-size-adjust: none;
    }
    * {
        margin: 0;
        padding: 0;
    }
    h1 {
        font-size: 25px;
        text-align: center;
        margin-bottom: 15px;
        line-height: 32px;
    }
    h2 {
        font-size: 16px;
        text-align: center;
        margin-bottom: 15px;
    }
    table {
        width: 100%;
    }
    li {
        margin-left: 20px;
    }
    p,
    li {
        margin-bottom: 15px;
    }
    li > ol,
    li > ul {
        margin-top: 15px;
    }
    .lower-alpha {
        list-style-type: lower-alpha;
    }
    .break-word {
        word-break: break-all;
    }
    /*black table header*/
    .no-border,
    .no-border tr,
    .no-border td {
        border: 0 none;
    }
    table{
        border-left: 1px solid black;
        border-top: 1px solid black;
        width: 100%;
        border-spacing: 0;
        border-collapse: separate;
    }
    table th {
        color: white;
        background: black;
        font-weight: bold;
        padding: 10px;
        text-align: center;
        font-size: 14px
    }
    table td {
        padding: 10px;
        text-align: left;
        vertical-align: top;
    }
    table td,
    table th {
        border-right: 1px solid black;
        border-bottom: 1px solid black;
    }
    .main-table {
        margin-bottom: 30px;
    }
    /*page breaking styling*/
    tr {
        page-break-inside: avoid !important;
    }
    .page-break {
        page-break-after: always;
        clear: both;
        float: none;
    }
    /*PAGE SPECIFIC*/    
    /*credit disclosure*/
    body#credit-disclosure {
        font-size: 11px;
    }
    #credit-disclosure h1,
    #credit-disclosure h2 {
        font-size: 13px;
        line-height: 18px;
        margin-bottom: 0;
    }
    #credit-disclosure h2 {
        margin-bottom: 15px;
    }
    #credit-disclosure th {
        text-align: left;
    }
    #credit-disclosure .source {
        float:left;
        text-align:left;
        width:50%;
    }
    #credit-disclosure .date {
        float:right;
        text-align:left;
        width:50%;
    }
    #credit-disclosure td:nth-child(1) {
        background-color: #efefef;
        vertical-align: middle;
        width: 125px;
        min-width: 125px;
        font-weight: 700;
    }
    #credit-disclosure #contact-info td:nth-child(1) {
        width: 100px;
        min-width: 100px;
        background: none;
        font-style: italic;
        font-weight: 300;
        padding-left: 0;
        vertical-align: top;
    }
    #credit-disclosure #contact-info,
    #credit-disclosure #contact-info td {
        border: 0 none;
    }   
</style>